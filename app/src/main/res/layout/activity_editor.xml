<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEditorBackground"
    tools:context=".presentation.editor.EditorActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorImageBackground"
        app:layout_constraintBottom_toTopOf="@+id/editView"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/editView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toTopOf="@+id/selectColorView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="H"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <SeekBar
                android:id="@+id/hueBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="S"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <SeekBar
                android:id="@+id/saturationBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="L"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <SeekBar
                android:id="@+id/lightnessBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/selectColorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <RadioGroup
            android:id="@+id/colorRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/redButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center"
                android:text="Red"
                android:textSize="16dp"
                android:textColor="@color/colorRed" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/yellowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center"
                android:text="Yellow"
                android:textSize="16dp"
                android:textColor="@color/colorYellow" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/greenButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center"
                android:text="Green"
                android:textSize="16dp"
                android:textColor="@color/colorGreen" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/aquaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center"
                android:text="Aqua"
                android:textSize="16dp"
                android:textColor="@color/colorAqua" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/blueButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center"
                android:text="Blue"
                android:textSize="16dp"
                android:textColor="@color/colorBlue" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/purpleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center"
                android:text="Purple"
                android:textSize="16dp"
                android:textColor="@color/colorPurple" />

        </RadioGroup>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>